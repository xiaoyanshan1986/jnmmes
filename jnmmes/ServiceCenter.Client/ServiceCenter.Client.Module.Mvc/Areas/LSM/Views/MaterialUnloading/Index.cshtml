@model ServiceCenter.Client.Mvc.Areas.LSM.Models.MaterialUnloadingQueryViewModel
@using ServiceCenter.MES.Model.LSM;
@using ServiceCenter.Model;
@using ServiceCenter.Common;
@using ServiceCenter.Client.Mvc.Areas.LSM.Models;
@using LSMRsources = ServiceCenter.Client.Mvc.Resources.LSM;
@using ServiceCenter.Client.Mvc.Resources;

@{
    ViewBag.Title = LSMRsources.StringResource.MaterialUnloading_ManagePageTitle;
}
<h2>@ViewBag.Title</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="javascript:showAddModal()" class="btn btn-primary">@StringResource.Add</a>
    </div>
    <div class="panel-body">
        @using (Ajax.BeginForm("Query", "MaterialUnloading", null
            , new AjaxOptions()
            {
                HttpMethod = "Post",
                OnBegin = "beginQuery",
                UpdateTargetId = "list"
            }
            , new { @class = "form-horizontal", resource = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-1">
                    @Html.LabelFor(m => m.UnloadingNo, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.UnloadingNo, new { @class = "form-control" })
                </div>
                <div class="col-md-1">
                    @Html.LabelFor(m => m.RouteOperationName, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.RouteOperationName, new { @class = "form-control" })
                </div>
                <div class="col-md-1">
                    @Html.LabelFor(m => m.ProductionLineCode, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.ProductionLineCode, new { @class = "form-control" })
                </div>
                <div class="col-md-1">
                    @Html.LabelFor(m => m.EquipmentCode, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.EquipmentCode, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-1">
                    @Html.LabelFor(m => m.StartUnloadingTime, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.StartUnloadingTime, new { @class = "form-control" })
                </div>
                <div class="col-md-1">
                    @Html.LabelFor(m => m.EndUnloadingTime, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.EndUnloadingTime, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    <input type="submit" value="@StringResource.Query" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
    <div class="alert fade in hide" resource="alert" id="statusMessage" style="margin:0px">
        <button type="button" class="close" onclick="hideStatusMessage()">
            <span aria-hidden="true">×</span><span class="sr-only">Close</span>
        </button>
        <p></p>
    </div>
    <div id="list">
        @Html.Partial("_ListPartial", new MaterialUnloadingViewModel())
    </div>
</div>

@*新增*@
<div id="add" class="modal fade bs-example-modal-lg"
     tabindex="-1"
     resource="dialog"
     aria-labelledby="addHeader" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="width:1200px" id="addDialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="addHeader">@LSMRsources.StringResource.MaterialUnloading_AddTitle</h4>
            </div>
            <div class="modal-body" id="addContent" style="margin:0px;padding:5px">
                @using (Ajax.BeginForm("Save", "MaterialUnloading", null
                        , new AjaxOptions()
                        {
                            HttpMethod = "Post",
                            OnSuccess = "completeSave",
                            OnBegin = "beginSave"
                        }
                        , new { @class = "form-horizontal", resource = "form", id = "frmAdd" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <input type="submit" class="btn btn-primary" value="@StringResource.Save" id="btnSave" />
                            <input type="reset" class="btn btn-default" value="@StringResource.Reset" id="btnReset" />
                        </div>
                        <div class="panel-body">
                            <div class="alert fade in hide" resource="alert" id="addStatusMessage">
                                <button type="button" class="close" onclick="hideAddAlert()">
                                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                                </button>
                                <p></p>
                            </div>
                            <div>
                                @Html.Partial("_AddPartial", new MaterialUnloadingViewModel())
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" language="javascript">

    $(function () {
        $("#StartUnloadingTime,#EndUnloadingTime,#UnloadingTime").datetimepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "yy/mm/dd",
            timeFormat: 'HH:mm:ss'
        });

        $("#btnReset").click(function () {
            $("#btnSave").removeAttr("disabled");
            var tbl = $("#tblDetail");
            var tbody = tbl.find("tbody");
            tbody.find("tr").each(function (index) {
                if (index > 0) {
                    $(this).remove();
                }
            });
            changeEquipmentCode();

            setUnloadingNo();
            var content = $("#addContent");
            content.find("input[name='UnloadingNo']").focus().select();
        });

        $("#btnSave").click(function () {
            var valid = true;
            var tbl = $("#tblDetail");
            var tbody = tbl.find("tbody");
            var master = $("#divAddMaster");

            master.find("input,select").each(function () {
                valid = valid && $(this).valid();
                if (valid == false) {
                    $(this).focus();
                    $(this).select();
                    return false;
                }
            })
            if (valid == false) {
                return valid;
            }

            tbody.find("tr").each(function (index) {
                $(this).find("input,select").each(function () {
                    valid = valid && $(this).valid();
                    if (valid == false) {
                        $(this).focus();
                        $(this).select();
                        return false;
                    }
                });
                if (valid == false) {
                    return false;
                }
            });
            return valid;
        });

        var getOrderNumberUrl = "@Url.Action("GetOrderNumber", "MaterialReceipt", new { area = "LSM" })";
        $("#txtOrderNumber").autocomplete({
            source: function (request, response) {
                var term = request.term.toUpperCase();
                var reqdata = { q: term };
                $.getJSON(getOrderNumberUrl, reqdata, function (data, status, xhr) {
                    response(data);
                });
            },
            minLength: 1,
            autoFocus: true,
            appendTo: "#addContent",
            change: function () {
                //清空列表数据
                $("input[name='MaterialLot']").each(function () {
                    $(this).val("");
                });

                $("input[name='UnloadingQty']").each(function () {
                    $(this).val("");
                });

                $("input[name='MaterialCode']").each(function () {
                    $(this).val("");
                    var MaterialDesc = $(this).parent().find("p");
                    $(MaterialDesc).text("");
                });

                $("input[name='SupplierCode']").each(function () {
                    $(this).val("");
                    $(this).parent().find("p").text("");
                });

                $("input[name='LineStoreName']").each(function () {
                    $(this).val("");
                });

                $("input[name='LoadingNo']").each(function () {
                    $(this).val("");
                });

                $("input[name='LoadingItemNo']").each(function () {
                    $(this).val("");
                });
            }
        });

        changeEquipmentCode();

        var content = $("#addContent");
        content.find("select[name='RouteOperationName'],select[name='ProductionLineCode']").change(function () {
            changeEquipmentCode();
        })

        content.find("input[name='MaterialLot']").each(function () {
            registerMaterialLotClientEvent($(this));
        });

        registerKeypressEvent();
    });

    function registerKeypressEvent() {
        var texts = $('#addContent').find(":text:enabled,:checkbox:enabled,select:enabled")
        texts.keypress(function (args) {
            if (args.ctrlKey == false && args.keyCode == 13) {
                var index = texts.index(this) + 1;
                if (index < texts.length) {
                    texts.eq(index).focus().select();
                    return false;
                }
                else {
                    return true;
                }
            }
        });
    }

    function setUnloadingNo() {

        var url = "@Url.Action("GetUnloadingNo", "MaterialUnloading", new { area = "LSM" })";
        var timestamp = Math.round(new Date().getTime() / 1000);
        var reqdata = { key: timestamp };
        $.getJSON(url, reqdata, function (data) {
            $("#addContent input[name='UnloadingNo']").val(data);
        });
    }


    function changeEquipmentCode() {
        var content = $("#addContent");
        content.find("select[name='EquipmentCode']").each(function () {
            $(this).get(0).options.length = 0;
        });//清空

        var url = "@Url.Action("GetEquipmentCodes", "MaterialUnloading", new { area = "LSM" })";
        var routeOperationName = content.find("select[name='RouteOperationName']").val();
        var productionLineCode = content.find("select[name='ProductionLineCode']").val();
        var timestamp = Math.round(new Date().getTime() / 1000);
        var reqdata = { RouteOperationName: routeOperationName, ProductionLineCode: productionLineCode, timestamp: timestamp };

        $.getJSON(url, reqdata, function (data) {
            $.each(data, function (i, item) {
                content.find("select[name='EquipmentCode']").each(function () {
                    $("<option></option>").val(item["Key"]).text(item["Text"]).appendTo($(this));
                });
            });
        });
    }


    function registerMaterialLotClientEvent(element) {
        var url = "@Url.Action("GetLoadingNo", "MaterialUnloading", new { area = "LSM" })";

            $(element).autocomplete({
                source: function (request, response) {
                    //已缓存。
                    var term = request.term.toUpperCase();
                    var content = $("#addContent");
                    var orderNumber = content.find("#txtOrderNumber").val();
                    var equipmentCode = content.find("select[name='EquipmentCode']").val();
                    var timestamp = Math.round(new Date().getTime() / 1000);
                    var reqdata = { q: term, OrderNumber: orderNumber, EquipmentCode: equipmentCode, timestamp: timestamp };
                    //动态获取。
                    $.getJSON(url, reqdata, function (data, status, xhr) {
                        response(data);
                    });
                },
                minLength: 1,
                autoFocus: true,
                appendTo: "#addContent",
                change: function (obj,data) {
                    var val = $(this).val().toUpperCase();
                    var valid = false;
                    var obj = $(this);
                    var tr=$(this).parent().parent();
                    var LoadingItemNo = tr.find("input[name='LoadingItemNo']");
                    var UnloadingQty = tr.find("input[name='UnloadingQty']");
                    var LineStoreName = tr.find("input[name='LineStoreName']");
                    var LoadingNo = tr.find("input[name='LoadingNo']");
                    var MaterialCode = tr.find("input[name='MaterialCode']");
                    var MaterialDesc = $(MaterialCode).parent().find("p");
                    var SupplierCode = tr.find("input[name='SupplierCode']");
                    var SupplierDesc = $(SupplierCode).parent().find("p");

                    //清除原有数据
                    $(LoadingNo).val("");
                    $(LoadingItemNo).val("");
                    $(UnloadingQty).val("");
                    $(LineStoreName).val("");
                    $(MaterialCode).val("");
                    $(MaterialDesc).text("");
                    $(SupplierCode).val("");
                    $(SupplierDesc).text("");

                    //设置新取得数据
                    $(LoadingNo).val(data.item.LoadingNo);
                    $(LoadingItemNo).val(data.item.LoadingItemNo);
                    $(UnloadingQty).val(data.item.CurrentQty);
                    $(LineStoreName).val(data.item.LineStoreName);
                    $(MaterialCode).val(data.item.MaterialCode);
                    $(MaterialDesc).text(data.item.MaterialDesc);
                    $(SupplierCode).val(data.item.SupplierCode);
                    $(SupplierDesc).text(data.item.SupplierDesc);
                }
            })
        }

        function addDetailRow() {

            var tbl = $("#tblDetail");
            var tbody = tbl.find("tbody");
            var length = tbody.find("tr").length;
            var lastestTr = tbody.find("tr")[length - 1];

            var tr = lastestTr.cloneNode(true);
            var itemNo = $(lastestTr).find("td").eq(0).find("p").text();
            var newItemNo = parseInt(itemNo, 10) + 1;
            $(tr).find("td").eq(0).find("p").text(newItemNo);
            $(tr).find("input[name='ItemNo']").val(newItemNo);
            $(tr).find("input[name='MaterialLot']").each(function () {
                registerMaterialLotClientEvent($(this));
            });

            tbody.append(tr);
            registerKeypressEvent();
        }

        function removeDetailRow(btn) {
            var tbl = $("#tblDetail");
            var tbody = tbl.find("tbody");
            var length = tbody.find("tr").length;
            if (length > 1) {
                var tr = btn.parent().parent();
                tr.remove();
            }
            tbody.find("tr").each(function (index) {
                $(this).find("td").eq(0).find("p").text(index + 1);
                $(this).find("input[name='ItemNo']").val(index + 1);
            });
        }

        //刷新列表
        function refreshList() {
            if ($("#frmPagingQuery").length > 0) {
                $("#frmPagingQuery").submit();
            }
        }

        //隐藏状态消息
        function hideStatusMessage() {
            $("#statusMessage").addClass("hide");
        }

        //清除列表数据
        function clearDetailRowData() {
            //清空列表数据
            $("input[name='MaterialLot']").each(function () {
                $(this).val("");
            });

            $("input[name='UnloadingQty']").each(function () {
                $(this).val("");
            });

            $("input[name='MaterialCode']").each(function () {
                $(this).val("");
                var MaterialDesc = $(this).parent().find("p");
                $(MaterialDesc).text("");
            });

            $("input[name='SupplierCode']").each(function () {
                $(this).val("");
                $(this).parent().find("p").text("");
            });

            $("input[name='LineStoreName']").each(function () {
                $(this).val("");
            });

            $("input[name='LoadingNo']").each(function () {
                $(this).val("");
            });

            $("input[name='LoadingItemNo']").each(function () {
                $(this).val("");
            });
        }
    </script>
    @*查询*@
    <script type="text/javascript" language="javascript">
        //刷新列表
        function beginQuery() {
            hideStatusMessage();
        }
    </script>

    @*新增*@
    <script type="text/javascript" language="javascript">
        //保存
        $(function () {
            $('#add').on('shown.bs.modal', function (e) {
                $("#btnReset").click();
            });
        })

        function showAddModal() {
            hideAddAlert();
            hideStatusMessage();
            var width = $("body").width();
            if (width != undefined) {
                $('#addDialog').width(width - 35);
            }
            $("#btnSave").removeAttr("disabled");
            $('#add').modal({ backdrop: "static" });
            $('#add').modal('show');
        }

        function hideAddAlert() {
            $("#addStatusMessage").addClass("hide");
        }

        function beginSave() {
            $("#btnSave").attr("disabled", "disabled");
        }

        function completeSave(result) {
            $("#btnSave").removeAttr("disabled");
            $("#addStatusMessage").find("p").html(result.Message);
            $("#addStatusMessage").removeClass("hide");
            if (result.Code > 0) {
                $("#addStatusMessage").removeClass("alert-success");
                $("#addStatusMessage").addClass("alert-danger");
            }
            else {
                $("#addStatusMessage").removeClass("alert-danger");
                $("#addStatusMessage").addClass("alert-success");
                refreshList();
                $("#btnReset").click();
            }
        }
    </script>

}