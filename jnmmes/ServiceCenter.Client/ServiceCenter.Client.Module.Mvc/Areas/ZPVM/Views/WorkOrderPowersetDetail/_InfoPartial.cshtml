@model ServiceCenter.Client.Mvc.Areas.ZPVM.Models.WorkOrderPowersetDetailViewModel
@using ServiceCenter.Common;
@using ServiceCenter.Client.Mvc.Resources;
@Html.ValidationSummary(true)
<div class="form-group">
    @Html.LabelFor(m => m.OrderNumber, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.OrderNumber</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.MaterialCode, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.MaterialCode</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Code, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.Code</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.ItemNo, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.ItemNo</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.SubCode, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.SubCode</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.SubName, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.SubName</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.MinValue, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.MinValue</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.MaxValue, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.MaxValue</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Picture, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">
            <img src="@Url.Action("ShowPicture"
                                , "WorkOrderPowersetDetail"
                                , new { @OrderNumber = Model.OrderNumber
                                        , @MaterialCode = Model.MaterialCode
                                        , @Code = Model.Code
                                        , @ItemNo = Model.ItemNo
                                        , @SubCode = Model.SubCode
                                        , @TimeStamp = DateTime.Now.Ticks
                                      })"
                 width="200" />
        </p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.IsUsed, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@(Model.IsUsed ? StringResource.Yes : StringResource.No)</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Editor, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.Editor</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.EditTime, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.EditTime</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Creator, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.Creator</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.CreateTime, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.CreateTime</p>
    </div>
</div>