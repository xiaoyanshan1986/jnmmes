@model ServiceCenter.Client.Mvc.Areas.EDC.Models.SamplingPlanViewModel
@using ServiceCenter.Common;

<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.Name</p>
        @Html.HiddenFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Mode, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => Model.Mode, @Model.GetSamplingPlanModeList(), new { @class = "form-control",@id="drpModifyMode"  })
        @Html.ValidationMessageFor(m => m.Mode)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Size, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.Size, new { @class = "form-control",@id="txtModifySize"  })
        @Html.ValidationMessageFor(m => m.Size)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Status, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => Model.Status, @Model.GetObjectStatusList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Status)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>