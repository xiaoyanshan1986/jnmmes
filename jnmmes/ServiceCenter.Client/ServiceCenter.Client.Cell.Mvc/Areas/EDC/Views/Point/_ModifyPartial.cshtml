@model ServiceCenter.Client.Mvc.Areas.EDC.Models.PointViewModel
@using ServiceCenter.Common;

<div class="form-group">
    @Html.LabelFor(m => m.GroupName, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        <p class="form-control-static">@Model.GroupName</p>
        @Html.HiddenFor(m => m.Key)
        @Html.HiddenFor(m => m.GroupName)
    </div>
    @Html.LabelFor(m => m.ActionName, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        <p class="form-control-static">@Model.ActionName.GetDisplayName()</p>
        @Html.HiddenFor(m => m.ActionName)
    </div>
    @Html.LabelFor(m => m.SamplingPlanName, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        <p class="form-control-static">@Model.SamplingPlanName</p>
        @Html.HiddenFor(m => m.SamplingPlanName)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.CategoryName, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        <p class="form-control-static">@Model.CategoryName</p>
        @Html.HiddenFor(m => m.CategoryName)
    </div>
    @Html.LabelFor(m => m.ProductionLineCode, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.ProductionLineCode, Model.GetProductionLineCodeList(), string.Empty, new { @class = "form-control", @id = "drpModifyProductionLineCode" })
        @Html.ValidationMessageFor(m => m.ProductionLineCode)
    </div>
    @Html.LabelFor(m => m.RouteOperationName, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.RouteOperationName, Model.GetRouteOperationNameList(), string.Empty, new { @class = "form-control", @id = "drpModifyRouteOperationName" })
        @Html.ValidationMessageFor(m => m.RouteOperationName)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.EquipmentCode, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.EquipmentCode, new List<SelectListItem>(), string.Empty, new { @class = "form-control", @id = "drpModifyEquipmentCode",@ref=Model.EquipmentCode })
        @Html.ValidationMessageFor(m => m.EquipmentCode)
    </div>
    @Html.LabelFor(m => m.MaterialType, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.MaterialType, Model.GetMaterialTypeList(), string.Empty, new { @class = "form-control", @id = "drpModifyMaterialType" })
        @Html.ValidationMessageFor(m => m.MaterialType)
    </div>
    @Html.LabelFor(m => m.MaterialCode, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.MaterialCode, new { @class = "form-control", @id = "txtModifyMaterialCode" })
        @Html.ValidationMessageFor(m => m.MaterialCode)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.RouteEnterpriseName, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.RouteEnterpriseName, Model.GetRouteEnterpriseNameList(), string.Empty, new { @class = "form-control", @id = "drpModifyRouteEnterpriseName" })
        @Html.ValidationMessageFor(m => m.RouteEnterpriseName)
    </div>
    @Html.LabelFor(m => m.RouteName, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.RouteName, new List<SelectListItem>(), new { @class = "form-control", @id = "drpModifyRouteName", @ref = Model.RouteName })
        @Html.ValidationMessageFor(m => m.RouteName)
    </div>
    @Html.LabelFor(m => m.RouteStepName, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.RouteStepName, new List<SelectListItem>(), new { @class = "form-control", @id = "drpModifyRouteStepName", @ref = Model.RouteStepName })
        @Html.ValidationMessageFor(m => m.RouteStepName)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Status, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => Model.Status, @Model.GetObjectStatusList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Status)
    </div>
    @Html.LabelFor(m => m.Description, new { @class = "col-md-1 control-label" })
    <div class="col-md-7">
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>